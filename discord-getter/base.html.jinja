{% macro paginations() %}
<div>
    {% block pagination %}{% endblock %}
</div>
{% endmacro %}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link href="style.css" rel="stylesheet" type="text/css"/>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
</head>
<body>
    <div class="container mt-2 mb-2">
        <nav class="navbar sticky-top navbar-expand-lg bg-dark">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <div class="d-flex align-items-center">
                        <span class="navbar-brand" href="#">Link Previewer</span>
                        <div class="vr mx-1"></div>
                        <div class="d-flex align-items-center">
                            <label for="switchDropdown" class="me-2 ms-2 col-form-label d-inline-block">Switch to</label>
                            {% block servers %}{% endblock %}
                        </div>
                        <span class="navbar-text mx-4">
                            Found: {% block linkcount %}{% endblock %}
                        </span>
                    </div>
                    <div>
                        {{ paginations() }}
                    </div>
                </div>
            </div>
        </nav>

        <div id="content" class="mt-4">
            {% block content %}{% endblock %}
        </div>

        <div class="btn-toolbar" role="toolbar">
            {{ paginations() }}
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
